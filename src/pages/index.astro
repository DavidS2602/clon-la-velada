<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>La velada del Año</title>
	</head>
	<body>
		<header class="relative">
			<div
				class="md:absolute md:left-1/2 md:-translate-x-1/2 flex flex-col gap-1 md:mt-0 justify-center w-64 md:top-8"
			>
				<img
					class="w-32 lg:w-64 h-auto"
					src="/public/images/logo.webp"
					alt="Logo"
				/>
				<h1
					class="text-white font-bold font-boxing text-center text-3xl"
				>
					<span
						class="bg-clip-text text-3xl text-transparent bg-gradient-to-b from-gray-200 via-gray-400 to-gray-600 inline-block leading-relaxed"
					>
						LA VELADA DEL AÑO III
					</span>
				</h1>
			</div>
		</header>

		<main class="relative">
			<section
				id="Boxeadores"
				class={`flex justify-between relative [&>div>img]:absolute [&>div>img]:bottom-0 [&>div>img]:w-auto h-[40vh] md:h-[65vh] lg:h-screen pt-24 border-b  border-white/10 [&>div>img]:animate-duration-1000`}
			>
				<div class="relative w-full">
					<img
						class="left-0 h-full z-50 animate-delay-300 animate-fade-right"
						src="/images/coscu-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Coscu"
					/>
					<img
						class="left-[5%] h-[90%] z-40 animate-delay-500 animate-fade-right"
						src="/images/mayichi-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Mayichi"
					/>
					<img
						class="left-[15%] h-[85%] z-30 animate-delay-700 animate-fade-right"
						src="/images/viruzz-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Viruzz"
					/>
					<img
						class="left-[30%] h-[75%] z-20 animate-delay-1000 animate-fade-right"
						src="/images/fernanfloo-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Fernafloo"
					/>
					<img
						class="left-[40%] h-[70%] z-10 animate-delay-[1300ms] animate-fade-right"
						src="/images/la-rivers-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="La Rivers"
					/>
					<img
						class="left-[45%] h-[65%] z-0 animate-delay-[1500ms] animate-fade-right"
						src="/images/papigavi-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Papigavi"
					/>
				</div>

				<div class="relative w-full">
					<img
						class="right-0 h-full z-50 animate-delay-300 animate-fade-left"
						src="/images/german-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="German"
					/>
					<img
						class="right-[5%] h-[90%] z-40 animate-delay-500 animate-fade-left"
						src="/images/amouranth-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Amouranth"
					/>
					<img
						class="right-[15%] h-[85%] z-30 animate-delay-700 animate-fade-left"
						src="/images/shelao-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Shelao"
					/>
					<img
						class="right-[30%] h-[75%] z-20 animate-delay-1000 animate-fade-left"
						src="/images/luzu-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Luzu"
					/>
					<img
						class="right-[40%] h-[70%] z-10 animate-delay-[1300ms] animate-fade-left"
						src="/images/rivers-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Rivers"
					/>
					<img
						class="right-[45%] h-[65%] z-0 animate-delay-[1500ms] animate-fade-left"
						src="/images/ampeter-mobile.webp"
						sizes="(max-width: 767px) 767px,100vw"
						alt="Ampeter"
					/>
				</div>
			</section>
			<div
				id="info"
				class="block lg:absolute lg:bottom-8 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2"
			>
				<div class="flex flex-col">
					<div class="px-5 pt-4 pb-2 bg-white text-black text-center">
						<h2 class="font-boxing text-7xl">1 de JULIO</h2>
					</div>
					<div
						class="px-5 pt-4 pb-2 bg-black text-white text-center hover:contrast-150 hover:scale-105 transition inline-block"
					>
						<a
							class="font-boxing text-5xl"
							href="https://twitch.tv/ibai"
							target="_blank"
							rel="noopener noreferrer"
							><span class="text-purple-100">twitch.tv/</span
							><span class="text-purple-400">ibai</span></a
						>
					</div>
					<div class="px-5 pt-2 pb-2 bg-white text-black text-center">
						<a
							class="font-boxing text-4xl hover:contrast-150 hover:scale-105 transition inline-block"
							href="https://twitch.tv/ibai"
							target="_blank">Comprar entradas</a
						>
					</div>
				</div>
			</div>
			<div
				id="combat"
				class="absolute bottom-6 z-50 mx-auto left-1/2 -translate-x-1/2 flex flex-col gap-y-24 opacity-0"
			>
				<div class="px-5 pt-4 pb-2 bg-black text-white text-center">
					<h2 class="font-boxing text-7xl">MAYICHI</h2>
				</div>
				<span
					class="left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing text-yellow-600 text-7xl block absolute"
				>
					VS
				</span>
				<div class="px-5 pt-4 pb-2 bg-white text-black text-center">
					<h2 class="font-boxing text-7xl">AMOURANTH</h2>
				</div>
			</div>
		</main>

		<footer></footer>
	</body>
</html>

<style :is global>
	body {
		background: #131313;
	}
	@font-face {
		font-family: "Boxing";
		src: url("/public/Fonts/BOXING/BOXING.ttf");
		font-weight: bold;
	}
	@font-face {
		font-family: "Boxing Striped";
		src: url("/public/Fonts/BOXING/BOXING-striped.ttf");
		font-weight: bold;
	}
</style>

<script>
	const boxeadores = document.querySelector("#Boxeadores");
	const boxeadoresImages = boxeadores.querySelectorAll("img");

	const info = document.querySelector("#info");
	const combat = document.querySelector("#combat");

	boxeadoresImages.forEach((img) => {
		img.addEventListener("mouseleave", () => {
			boxeadoresImages.forEach((img) => {
				img.setAttribute(
					"style",
					"filter: blur(0px) grayscale(0); transition: all .3s ease-in-out"
				);
			});

			info.setAttribute(
				"style",
				"opacity: 1; transition: all .3s ease-in-out"
			);
			combat.setAttribute(
				"style",
				"opacity: 0; transition: all .3s ease-in-out"
			);
		});
		img.addEventListener("mouseenter", () => {
			const sectionImages = img.parentNode.children;
			const position = Array.from(sectionImages).indexOf(img);
			const [leftBoxer, rightBoxer] = [
				boxeadoresImages[position],
				boxeadoresImages[position + boxeadoresImages.length / 2],
			];

			info.setAttribute(
				"style",
				"opacity: 0; transition: all .3s ease-in-out"
			);
			combat.setAttribute(
				"style",
				"opacity: 1; transition: all .3s ease-in-out"
			);
			const [FirstBoxerName, SecondBoxerName] =
				combat.querySelectorAll("h2");
				FirstBoxerName.innerHTML = leftBoxer.getAttribute("alt");
				SecondBoxerName.innerHTML = rightBoxer.getAttribute("alt");

			boxeadoresImages.forEach((img) => {
				img.setAttribute(
					"style",
					"filter: blur(2px) grayscale(.8); transition: all ease-in-out"
				);
			});

			leftBoxer.setAttribute(
				"style",
				"scale: 1.05; contrast: 1.1; transition: all .5s ease-in-out"
			);
			rightBoxer.setAttribute(
				"style",
				"scale: 1.05; contrast: 1.1; transition: all .5s ease-in-out"
			);
		});
	});
</script>
